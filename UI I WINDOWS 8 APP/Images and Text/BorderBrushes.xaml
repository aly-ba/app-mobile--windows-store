<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UserInterface">
    <SolidColorBrush
        x:Key="BorderBrush"
        Color="Red" />
    <LinearGradientBrush
        x:Key="BorderBackgroundBrush">
        <LinearGradientBrush.GradientStops>
            <GradientStop
                Offset="0.20"
                Color="White" />
            <GradientStop
                Offset="0.80"
                Color="Black" />
        </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>
</ResourceDictionary>
